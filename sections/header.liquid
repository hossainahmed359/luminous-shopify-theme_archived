{% if section.settings['navigation_menu'].links == blank %}
    {% assign nav_linklist = linklists[section.settings['navigation-menu'] ] %}
{% else %}
    {% assign nav_linklist = section.settings['navigation_menu'] %}
{% endif %}


<nav class="navbar navbar-custom navbar-fixed-top navbar-transparent" role="navigation">
    <div class="container">
        <div class="navbar-header">
            {% if section.settings.site_brand_url == blank %}
                {% assign site_brand_url = routes.root_url %}
            {% else %}
                {% assign site_brand_url = section.settings.site_brand_url %}
            {% endif %}

            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#custom-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="{{ site_brand_url }}">{{ section.settings.site_brand_name }}</a>
        </div>
        <div class="collapse navbar-collapse" id="custom-collapse">
            <ul class="nav navbar-nav navbar-right">
                {% render 'linklist', links: nav_linklist.links %}
            </ul>
        </div>
    </div>
</nav>

{% schema %}
    {
    "name": "Header",
    "settings": [
        {
            "type": "text",
            "id": "site_brand_name",
            "default": "Luminous",
            "label": "Site Brand Name"
        },
        {
            "type": "url",
            "id": "site_brand_url",
            "label": "Site Brand URL"
        },
        {
            "type": "link_list",
            "id": "navigation_menu",
            "default": "main-menu",
            "label": "Heading Navigation Menu"
        }
    ]
    }
{% endschema %}